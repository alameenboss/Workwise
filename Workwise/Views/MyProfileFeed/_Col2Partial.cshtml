@using Microsoft.AspNet.Identity;
@using Workwise.Model;
@model UserProfileViewModel
@{
    var username = ViewData["username"] != null ? ViewData["username"].ToString() : string.Empty;
    var firstName = ViewData["firstname"] != null ? ViewData["firstname"].ToString() : string.Empty;
}
<div class="col-lg-6">
    <div class="main-ws-sec">
        <div class="user-tab-sec rewivew">
            <div>
                <h3>
                    @firstName
                    @if (username == User.Identity.Name)
                    {
                        <a href="#" title="" class="edit-basic-open pull-right">
                            <i class="fa fa-pencil"></i>
                        </a>
                    }
                </h3>


            </div>
            <div class="star-descp">
                <span>@SessionHelper.GetUser(User.Identity.GetUserId()).Designation</span>

                <ul>
                    <li><i class="fa fa-star"></i></li>
                    <li><i class="fa fa-star"></i></li>
                    <li><i class="fa fa-star"></i></li>
                    <li><i class="fa fa-star"></i></li>
                    <li><i class="fa fa-star-half-o"></i></li>
                </ul>
                @if (username == User.Identity.Name)
                {
                    <a href="#" title="">Status</a>
                }
            </div><!--star-descp end-->
            <div class="tab-feed st2 settingjb">
                <ul>
                    <li data-tab="feed-dd" class="active">
                        <a href="#" title="">
                            <img src="/images/ic1.png" alt="">
                            <span>Feed</span>
                        </a>
                    </li>
                    <li data-tab="info-dd">
                        <a href="#" title="">
                            <img src="/images/ic2.png" alt="">
                            <span>Info</span>
                        </a>
                    </li>
                    @if (username == User.Identity.Name)
                    {
                        <li data-tab="saved-jobs">
                            <a href="#" title="">
                                <img src="/images/ic4.png" alt="">
                                <span>Jobs</span>
                            </a>
                        </li>
                        <li data-tab="my-bids">
                            <a href="#" title="">
                                <img src="/images/ic5.png" alt="">
                                <span>Bids</span>
                            </a>
                        </li>
                    }

                    <li data-tab="portfolio-dd">
                        <a href="#" title="">
                            <img src="/images/ic3.png" alt="">
                            <span>Portfolio</span>
                        </a>
                    </li>
                    @if (username == User.Identity.Name)
                    {
                        <li data-tab="rewivewdata">
                            <a href="#" title="">
                                <img src="/images/review.png" alt="">
                                <span>Reviews</span>
                            </a>
                        </li>
                        <li data-tab="payment-dd">
                            <a href="#" title="">
                                <img src="/images/ic6.png" alt="">
                                <span>Payment</span>
                            </a>
                        </li>
                    }


                </ul>
            </div><!-- tab-feed end-->
        </div><!--user-tab-sec end-->


        @Html.Partial(@"~\Views\MyProfileFeed\UsertabDetails\_SavedJobsPartial.cshtml")
        @Html.Partial(@"~\Views\MyProfileFeed\UsertabDetails\_InfoPartia.cshtml")

        @Html.Partial(@"~\Views\MyProfileFeed\UsertabDetails\_FeedPartial.cshtml")
        @Html.Partial(@"~\Views\MyProfileFeed\UsertabDetails\_MyBidsPartial.cshtml")
        @Html.Partial(@"~\Views\MyProfileFeed\UsertabDetails\_ReviewDataPartial.cshtml")
        @Html.Partial(@"~\Views\MyProfileFeed\UsertabDetails\_MyBid2Partial.cshtml")
        @Html.Partial(@"~\Views\MyProfileFeed\UsertabDetails\_PortfolioPartial.cshtml")
        @Html.Partial(@"~\Views\MyProfileFeed\UsertabDetails\_PaymentPartial.cshtml")




    </div><!--main-ws-sec end-->
</div>
