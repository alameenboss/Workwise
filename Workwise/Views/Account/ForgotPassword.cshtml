@model Workwise.Model.ForgotPasswordViewModel
@{
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
    ViewBag.Title = "";
}



<div class="col-lg-6">
    <div class="login-sec" style="margin-top:100px;">
        <div class="sign_in_sec current">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <h3>Forgot your password?</h3>

            @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()

                <div class="row">

                    <label style="margin-bottom:10px;">Enter your email.</label>
                    <div class="col-lg-12 no-pdd">

                        <div class="sn-field">
                            @Html.TextBoxFor(m => Model.Email, new { placeholder = "Email" })
                            <i class="fa fa-envelope"></i>
                        </div><!--sn-field end-->
                    </div>
                    <div class="col-lg-12 no-pdd">
                        <button type="submit" value="submit">Email Link</button>
                        @Html.ActionLink("Sign in", "Login", "Account")
                        @Html.ActionLink("Sign up", "Register", "Account")
                    </div>

                </div>

            }
           
        </div><!--sign_in_sec end-->
    </div><!--login-sec end-->
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
