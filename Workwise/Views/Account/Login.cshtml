@using Workwise.Models
@model LoginViewModel
@{
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
    ViewBag.Title = "Log in";
}
<div class="col-lg-6">
    <div class="login-sec">
        <ul class="sign-control">
            <li data-tab="tab-1" class="current">@Html.ActionLink("Sign in","Login","Account")</li>
            <li data-tab="tab-2">@Html.ActionLink("Sign up", "Register", "Account")</li>
        </ul>

        <div class="sign_in_sec current" id="tab-1">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <h3>Sign in</h3>

            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <div class="row">
                    <div class="col-lg-12 no-pdd">
                        <div class="sn-field">
                            @Html.TextBoxFor(m => m.Username, new { placeholder = "Username" })
                            <i class="fa fa-user"></i>

                        </div><!--sn-field end-->
                        @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-lg-12 no-pdd">
                        <div class="sn-field">
                            @Html.PasswordFor(m => m.Password, new { placeholder = "Password" })
                            <i class="fa fa-lock"></i>
                        </div>
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-lg-12 no-pdd">
                        <div class="checky-sec">
                            <div class="fgt-sec">
                                <input type="checkbox" name="cc" id="c1">
                                <label for="c1">
                                    <span></span>
                                </label>
                                <small>Remember me</small>
                                @*@Html.CheckBoxFor(m => m.RememberMe)
                                @Html.LabelFor(m => m.RememberMe)*@
                            </div><!--fgt-sec end-->
                            @*<a href="/Login/?username=&amp;password=#" title="">Forgot Password?</a>*@
                            @Html.ActionLink("Forgot your password?", "ForgotPassword")
                        </div>
                    </div>
                    <div class="col-lg-12 no-pdd">
                        <button type="submit" value="submit">Sign in</button>
                    </div>
                </div>
            }
            <div class="login-resources">
                <h4>Login Via Social Account</h4>
                <ul>
                    <li><a href="/Login/?username=&amp;password=#" title="" class="fb"><i class="fa fa-facebook"></i>Login Via Facebook</a></li>
                    <li><a href="/Login/?username=&amp;password=#" title="" class="tw"><i class="fa fa-twitter"></i>Login Via Twitter</a></li>
                </ul>
            </div><!--login-resources end-->
        </div><!--sign_in_sec end-->

    </div><!--login-sec end-->
</div>

