@using Workwise.Data.Models;
@model  List<UserProfile>

<section class="companies-info">
    <div class="container">
        <div class="company-title">
            <h3>All User Profile</h3>
        </div><!--company-title end-->
        <div class="companies-list">
            <div class="row">
                @using (Html.BeginForm("GenerateUser", "Account", FormMethod.Post))
                {
                    <input type="submit" value="Generate User" class="btn btn-primary" />
                }

            </div>
            <div class="row">
                @foreach (var user in Model)
                {
                    <div class="col-lg-3 col-md-4 col-sm-6 col-12">
                        <div class="company_profile_info">
                            <div class="company-up-info">
                                <img src="@user.ImageUrl" alt="">
                                <h3>@user.FirstName</h3>
                                <h4>@user.Designation</h4>
                                <ul>
                                    <li><a href="#" title="" class="follow">Follow</a></li>
                                    <li><a href="#" title="" class="message-us"><i class="fa fa-envelope"></i></a></li>
                                    <li><a href="#" title="" class="hire-us">Hire</a></li>
                                </ul>
                            </div>
                            <a href="#" title="" class="view-more-pro">View Profile</a>
                        </div><!--company_profile_info end-->
                    </div>
                }

            </div>
        </div><!--companies-list end-->

    </div>
</section><!--companies-info end-->
